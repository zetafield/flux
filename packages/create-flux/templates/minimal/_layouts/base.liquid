<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
      {{ page.title }}
      -
      {{ data.site.name }}
    </title>
    <meta name="description" content="{{ page.description | default: data.site.description }}">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" href="/favicon.png">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/assets/css/main.css">
  </head>
  <body>
    {% include 'header' %}
    <main>
      {{ content }}
    </main>
  </body>
</html>
