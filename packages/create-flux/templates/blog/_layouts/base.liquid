<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
      {{ page.title }}
      -
      {{ data.site.name }}
    </title>
    <meta name="description" content="{{ page.description | default: data.site.description }}">
    <link rel="stylesheet" href="/assets/css/main.css">
    {% if page.css %}
      {% for href in page.css %}
        <link rel="stylesheet" href="{{ href }}">
      {% endfor %}
    {% endif %}
    <link rel="icon" href="/favicon.svg">
  </head>
  <body>
    {% include 'header' %}
    <main>
      {{ content }}
    </main>
  </body>
</html>
